<Window x:Class="TodoAppMVVM.Views.MessageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoAppMVVM.Views"
        mc:Ignorable="d"
        Title="MessageView" Height="200" Width="500">

    <Border Padding="20">
        <Grid>
            <TextBlock x:Name="YourMsg" Width="auto" FontSize="20" Text="{Binding YourMsg}" ></TextBlock>
        </Grid>
    </Border>
</Window>
